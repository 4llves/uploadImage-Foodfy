<div class="item">
  <div>Imagem da Receita</div>
    <div id="photos-container">
        <div id="photos-upload">
            <input
                id="photos-input"
                type="file"
                name="photos"
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
            >
            <p>
              <i class="material-icons">
                add
              </i>
            </p>
        </div>

        <div id="photos-preview">
            {% if files %}
                {% for image in files %}
                    <div class="photo" id="{{image.id}}">
                        <img src="{{image.src}}" alt="{{image.name}}">
                        <i class="material-icons"
                            onclick="PhotosUpload.removeOldPhoto(event)"
                        >
                            close
                        </i>
                    </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>        
    </div>
</div>

<div class="divItem">
    <div class="item">
        <div>Titulo</div>
        <div>
            <input
            type="text"
            name="title"
            placeholder="Nome da Receita"
            value="{{ recipe.title }}">
        </div>
    </div>

    <div class="item">
        <div>Chef</div>
        <div>
            <select name="chef">
                <option disabled selected>Selecione um Chef</option>
                {% for chef in chefOptions %}
                    <option
                        value="{{ chef.id }}" {% if recipe.chef_id == chef.id %} selected {% endif %}>
                        {{ chef.name }} 
                    </option>
                {%endfor%}
            </select>
        </div>
    </div>

</div>

<div id="ingredients">
    <div>Ingredientes</div>    
    {% for ingredient in recipe.ingredients %}
        <div class="ingredient">    
            <input
                type="text"
                name="ingredients[]"
                placeholder="Ingredientes"        
                value="{{ ingredient }}"        
            >
        </div>    
    {%else%}
        <div class="ingredient">    
            <input
                type="text"
                name="ingredients[]"
                placeholder="Ingredientes"
                value=""        
            >
            </div>        
    {% endfor %}
</div>
<button type="button" class="add-ingredient">Adicionar novo Ingrediente</button>

<div id="preparations">
    <div>Modo de Preparo</div>
    {% for preparat in recipe.preparation %}
    <div class="preparation">    
    <input
        type="text"
        name="preparation[]"
        placeholder="Passo a Passo"
        value="{{ preparat }}"
    >
    </div>
    {%else%}
    <div class="preparation">    
    <input
        type="text"
        name="preparation[]"
        placeholder="Passo a Passo"
        value=""        
    >
    </div>     
    {% endfor %}
</div>
<button type="button" class="add-pass">Adicionar novo Passo</button>

<div class="item">
    <div>Informações Adicionais</div>
    <div>    
        <input        
        type="text"
        name="information"
        placeholder=""
        value="{{ recipe.information }}">
    </div>
</div>
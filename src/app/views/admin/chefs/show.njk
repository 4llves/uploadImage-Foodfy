{% extends "layout.njk" %}

{% block content %}

<div class="recipe">

        <div class="top-header">
            <h1>Chef: {{ chef.name }}</h1>
            <a href="{{ chef.id }}/edit">Editar Chef</a>
        </div>

        <div class="chef-header">
            <img src="{{ files[0].src }}" alt="{{ chef.name }}">
            <h1>{{ chef.name }}</h1>
            <h2>{{ chef.total_recipes }} receitas</h2>            
        </div>

        <h1>Receitas</h1>
        <div class="container-chef-show">
            {% for recipe in chefsRecipes %}
                <div class="card">
                    <img src="{{ recipe.image }}" alt="{{ title }}">
                    <div class="inCard">
                        <h2>{{ recipe.title }}</h2>
                        <p> por {{ recipe.chefname }}</p>
                        <a href="/admin/recipes/index/{{ recipe.id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>

</div>

    <script src="/scripts.js"></script>

{% endblock content %}